<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date [%level] from %logger in %thread - %message%n%xException</pattern>
    </encoder>
  </appender>

  <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="STDOUT" />
  </appender>

  <logger name="org.apache" level="WARN" />
  <logger name="org.apache.kafka.streams" level="INFO" />

  <logger name="com.deliveroo.kafka.producer" level="INFO" />
  <logger name="com.deliveroo.kafka.consumer" level="INFO" />
  <logger name="org.apache.kafka.clients.consumer" level="INFO" />

  <root level="DEBUG">
    <appender-ref ref="ASYNCSTDOUT" />
  </root>

</configuration>
